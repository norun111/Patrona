.creator-show
  .creator-show__header

  .creator-show__wrapper
    .creator-info
      .creator-info__image
        = image_tag('default.jpg')
      .creator-info__name
        = @creator.creator_name
      .creator-info__exp
        -if podcasts_check(@creator)
          podcasts
        -if videos_check(@creator)
          videos
        -if music_check(@creator)
          music
        
        
